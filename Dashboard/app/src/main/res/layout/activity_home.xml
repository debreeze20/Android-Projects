<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/aliceblue"
        android:padding="10dp"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/home"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/lingkaran"
            android:src="@drawable/ic_simple_isometric_store" />

        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="20dp"
            android:layout_height="wrap_content"
            android:text="HOME"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <View
            android:layout_width="165dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/akun"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_baseline_account_circle_24" />

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/skyblue">

        <ImageView
            android:id="@+id/search"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:clickable="true"
            android:layout_gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_baseline_search_24" />

        <View
            android:layout_width="35dp"
            android:layout_height="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="20dp"
            android:layout_gravity="center" />

        <View
            android:layout_width="35dp"
            android:layout_height="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort"
            android:textSize="20dp"
            android:layout_gravity="center" />

        <View
            android:layout_width="35dp"
            android:layout_height="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:textSize="20dp"
            android:layout_gravity="center" />

        <View
            android:layout_width="35dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/basket"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:clickable="true"
            android:layout_gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_baseline_local_grocery_store_24" />

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/skincare"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:clickable="true"
            android:src="@drawable/skincare"/>

        <ImageView
            android:id="@+id/outfit"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:clickable="true"
            android:src="@drawable/outfit"/>

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:clickable="true"
            android:src="@drawable/sepatu"/>

        <ImageView
            android:id="@+id/bag"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:clickable="true"
            android:src="@drawable/tas"/>

    </LinearLayout>

</LinearLayout>