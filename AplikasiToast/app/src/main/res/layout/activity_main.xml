<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="15dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Hello Toast"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/tombolToast"
        android:onClick="ToastClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "TOAST"
        android:background="@color/biru"
        android:textStyle="bold"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/kounter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0"
        android:textSize="250dp"
        android:background="@color/kuning"
        android:textColor="@color/biru"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Desi Shofiana Sari - A11.2019.12276"
        android:textSize="20dp"
        android:background="@color/kuning"
        android:textColor="@color/biru"
        android:textStyle="bold"
        android:gravity="center"
        />

    <Button
        android:id="@+id/tombolCount"
        android:onClick="countClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COUNT"
        android:background="@color/biru"
        android:textStyle="bold"
        android:textSize="25dp" />

</LinearLayout>